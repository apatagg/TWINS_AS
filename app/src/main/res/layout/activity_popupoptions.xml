<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="Opciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView6" android:gravity="center"
            android:textSize="36sp" android:textStyle="bold"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
    <TextView
            android:text="Elige tu baraja:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView7" android:gravity="center"
            android:textSize="24sp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="230dp">
        <Space
                android:layout_width="2dp"
                android:layout_height="169dp" android:layout_weight="1"/>
        <Button
                android:layout_width="180dp"
                android:layout_height="220dp" android:id="@+id/firstCard" android:layout_weight="1"
                android:maxWidth="88dip" android:maxHeight="48dip" android:background="@drawable/emoji0"/>
        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"/>
        <Button
                android:layout_width="180dp"
                android:layout_height="220dp" android:id="@+id/secondCard" android:layout_weight="1"
                android:maxWidth="88dip" android:maxHeight="48dip" android:background="@drawable/coche0"/>
        <Space
                android:layout_width="wrap_content"
                android:layout_height="171dp" android:layout_weight="1"/>
    </LinearLayout>
    <Button
            android:text="@string/cancelar"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/acceptButton" android:layout_gravity="center"/>
</LinearLayout>