<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="PUNTUACION"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView4" android:gravity="center"
            android:textSize="30sp" android:textStyle="bold"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="23dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/starsText" android:gravity="center"
            android:textSize="36sp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Puntos:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"
                android:gravity="right" android:textSize="24sp"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/currentScore" android:layout_weight="1"
                android:textSize="24sp"/>
    </LinearLayout>
    <Space
            android:layout_width="match_parent"
            android:layout_height="32dp"/>
    <TextView
            android:text="TOP 3"
            android:layout_width="match_parent"
            android:layout_height="55dp" android:id="@+id/textView3" android:layout_gravity="center"
            android:gravity="center" android:textSize="24sp" android:textStyle="bold" android:background="#BBDAFF"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="173dp" android:id="@+id/scoreList"
    />
    <Button
            android:text="Cerrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/cancelButton"/>
</LinearLayout>