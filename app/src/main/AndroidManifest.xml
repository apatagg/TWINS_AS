<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="es.imposoft.twins">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icono"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.SplashScreenActivity"
            android:theme="@style/splashactivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.MainActivity" />

        <activity android:name=".activities.SelectionGameModeActivity" />

        <activity android:name=".activities.GameActivity"
                  android:theme="@style/generalnotitle" />

        <activity android:name=".activities.SelectLevelActivity" />

        <activity android:name=".activities.BackgroundMusicActivity" />

        <activity android:name=".activities.SelectChallengeActivity" />

        <activity android:name=".activities.PopupActivity"
            android:configChanges="locale|orientation"
            android:theme="@style/AppTheme.PopupWindow" />

    </application>

</manifest>