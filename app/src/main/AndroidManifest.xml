<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.imposoft.twins">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icono"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.SelectionGameModeActivity">
        </activity>

        <activity android:name=".activities.GameActivity">
        </activity>

        <activity android:name=".activities.SelectLevelActivity">
        </activity>

        <activity android:name=".activities.BackgroundMusicActivity">
        </activity>

        <activity android:name=".activities.PopupActivity"
                  android:theme = "@style/AppTheme.PopupWindow"
        ></activity>

    </application>

</manifest>