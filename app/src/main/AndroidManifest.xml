<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="es.imposoft.twins">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icono"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activities.ProfileActivity"></activity>
        <activity
            android:name=".view.activities.SplashScreenActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/splashactivity"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activities.MainActivity" />
        <activity android:name=".view.activities.SelectionGameModeActivity" />
        <activity
            android:name=".view.activities.GameActivity"
            android:theme="@style/generalnotitle" />
        <activity android:name=".view.activities.SelectLevelActivity" />
        <activity android:name=".view.activities.BackgroundMusicActivity" />
        <activity android:name=".view.activities.SelectChallengeActivity" />
        <activity
            android:name=".view.activities.PopupActivity"
            android:configChanges="locale|orientation"
            android:theme="@style/AppTheme.PopupWindow" />
    </application>

</manifest>